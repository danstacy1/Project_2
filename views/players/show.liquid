{% layout 'layout.liquid' %}
{% block content %}
    <div class="conatiner-md">
        <article>

            <h2>{{player.name}}</h2>
            <h3>
                {% if player.readyToEat %}
                    Ripe and ready to eat
                {% else %}
                    Not ripe, wait to eat it
                {% endif %}
            </h3>
            <h4>Color: {{player.team}}</h4>
            <div class="btn-group">

                <a href="/draft/{{player._id}}/edit" class="btn btn-primary">Edit Team</a>
                <form action="/myteam/{{player._id}}?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
        </article>
        <div class="col-md-6">
            <form action="/comments/{{player._id}}" method="POST">
                <fieldset>
                    <legend>Add Player Note</legend>
                    <label class="form-label">Comment:</label>
                    <input type="text" class="form-control" name="note" placeholder="Enter comment here" />
                </fieldset>
                <input type="submit" class="btn btn-success" value="Add comment" />
            </form>
        </div>
        {% if player.comments.length > 0 %}
        <div class="container-sm justify-content-center">
            <div class="col-md-8 col-lg-6">
                {% for comment in player.comments %}
                    {% render '../comment.liquid' comment: comment, userId: userId, player: player, username: username %}
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
    {% endblock %}